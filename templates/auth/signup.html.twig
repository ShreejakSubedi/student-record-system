{% extends "base.html.twig" %}

{% block title %}Sign Up - Student Record Management System{% endblock %}

{% block content %}
<div style="max-width: 480px; margin: 4rem auto; background: #fff; padding: 2rem; border-radius: 8px; box-shadow: 0 6px 18px rgba(0,0,0,0.08)">
    <h2 style="text-align: center; margin-bottom: 1.5rem">Create Account</h2>
    
    {% if errors %}
        <div class="alert alert-danger">
            {% for error in errors %}
                <div>{{ error }}</div>
            {% endfor %}
        </div>
    {% endif %}
    
    <form method="post" action="/fullstack2/student-record-system/public/signup.php">
        <div class="form-group">
            <label for="username">Username</label>
            <input 
                id="username" 
                name="username" 
                class="form-control" 
                value="{{ username | default('') }}"
                required
                autofocus
            />
            <small style="color: #666">At least 3 characters</small>
        </div>
        
        <div class="form-group">
            <label for="email">Email</label>
            <input 
                id="email" 
                name="email" 
                type="email" 
                class="form-control" 
                value="{{ email | default('') }}"
                required
            />
        </div>
        
        <div class="form-group">
            <label for="password">Password</label>
            <input 
                id="password" 
                name="password" 
                type="password" 
                class="form-control" 
                required
            />
            <small style="color: #666">At least 6 characters</small>
        </div>
        
        <div class="form-group">
            <label for="password_confirm">Confirm Password</label>
            <input 
                id="password_confirm" 
                name="password_confirm" 
                type="password" 
                class="form-control" 
                required
            />
        </div>
        
        <input type="hidden" name="{{ csrf_token_name }}" value="{{ csrf_token }}" />
        
        <div style="text-align: center; margin-top: 1.5rem">
            <button class="btn" type="submit" style="background: #0066cc; color: white; padding: 0.6rem 1.5rem; border: 0; border-radius: 4px; cursor: pointer">
                Sign Up
            </button>
        </div>
    </form>
    
    <p style="text-align: center; margin-top: 1.5rem">
        Already have an account? 
        <a href="/fullstack2/student-record-system/">Sign in</a>
    </p>
</div>
{% endblock %}
